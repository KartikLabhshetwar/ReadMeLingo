{
  "name": "readmelingo",
  "version": "0.1.0",
  "description": "CLI tool to translate GitHub repository documentation into multiple languages using Lingo.dev",
  "keywords": [
    "cli",
    "translation",
    "github",
    "readme",
    "documentation",
    "multilingual",
    "i18n",
    "lingo",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/readmelingo.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/readmelingo/issues"
  },
  "homepage": "https://github.com/yourusername/readmelingo#readme",
  "main": "dist/cli/index.js",
  "bin": {
    "readmelingo": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "cli": "tsx cli/index.ts",
    "cli:build": "tsc -p tsconfig.cli.json && node -e \"const fs=require('fs');const p='dist/cli/index.js';const c=fs.readFileSync(p,'utf8');if(!c.startsWith('#!/'))fs.writeFileSync(p,'#!/usr/bin/env node\\n'+c)\"",
    "cli:run": "node dist/cli/index.js",
    "cli:test": "node bin/readmelingo",
    "prepublishOnly": "npm run cli:build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.2",
    "dotenv": "^16.4.5",
    "lingo.dev": "^0.115.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "uuid": "^13.0.0"
  },
  "optionalDependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.553.0",
    "ora": "^9.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "babel-plugin-react-compiler": "1.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
